<%= bootstrap_form_with(model: @question, local: true, layout: :horizontal, control_col: "col-sm-8") do |form| %>
  <%= form.form_group :question, label: { text: "Question" } do %>
    <%= form.text_area :question, hide_label: true %>
  <% end %>

  <%= form.form_group :answer_choices, label: { text: "Answer Choices" } do %>
    <%= form.radio_button :correct_answer, 'a' %>
    <%= form.text_field :choice_a, hide_label: true %>

    <%= form.radio_button :correct_answer, 'b' %>
    <%= form.text_field :choice_b, hide_label: true %>

    <%= form.radio_button :correct_answer, 'c' %>
    <%= form.text_field :choice_c, hide_label: true %>

    <%= form.radio_button :correct_answer, 'd' %>
    <%= form.text_field :choice_d, hide_label: true %>

    <%= form.submit class: "btn btn-primary"  %>
  <% end %>
<% end %>
